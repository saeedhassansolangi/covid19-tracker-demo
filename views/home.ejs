<%-include("partials/headers.ejs")%>


<div class="row container" style="margin-top: 10px;">
  <form action="/" method="POSt" class="col s12">
    <div class="row">
      <div class="input-field col s12">
        <input id="email" type="text" name="search" class="validate">
        <label for="email">Search Country Name Here ...</label>
      </div>
    </div>
    <button class="waves-effect #4a148c purple darken-4 btn btn">Search</button>
</div>
</form>

<div>
  <%if(typeof countryInfo === "undefined"){%>
  <p> </p>
  <%}else{%>

  <div class="container">
    <h3><%=countryName%></h3>
     <canvas id="doughnut-chart" width="500" height="400"></canvas>
    <div class="row" style="text-align: center;">
      <div class="col s12 m4">
        <div class="card blue">
          <div class="card-content white-text">
            <span class="card-title">Confirmed</span>
            <p id="confirmeds"><%=countryInfo.confirmed.value%></p>
          </div>
        </div>
      </div>

      <div class="col s12 m4">
        <div class="card green darken-1">
          <div class="card-content white-text">
            <span class="card-title">Recoverd</span>
            <p id="recovereds"><%=countryInfo.recovered.value%></p>
          </div>
        </div>
      </div>

      <div class="col s12 m4">
        <div class="card red darken-1">
          <div class="card-content white-text">
            <span class="card-title">Deaths</span>
            <p id="deathss"><%=countryInfo.deaths.value%></p>
          </div>
        </div>
      </div>
    </div>

   
  </div>
  <%}%>
</div>
</div>



</div>
  <script src="/country.js" type="text/javascript"></script>


  <%-include("partials/footer")%>